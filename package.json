{
  "name": "assessment",
  "description": "Zeply code assessment",
  "version": "1.0.0",
  "author": "George Foteinopoulos <georgios.foteinopoulos@gmail.com>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gfot/assessment.git"
  },
  "keywords": [
    "zeply",
    "code challenge",
    "cryptocurrency"
  ],
  "scripts": {
    "be:dev": "nodemon backend/server.js",
    "be:test": "vitest backend/test",
    "be:test:watch": "vitest backend/test --watch",
    "be:test:coverage": "vitest backend/test run --coverage",
    "be:lint": "eslint backend",
    "be:lint:fix": "eslint backend --fix",
    "be:format": "prettier backend",
    "be:format:fix": "prettier backend --write",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest frontend",
    "test:coverage": "vitest frontend run --coverage",
    "test:ci": "vitest --run",
    "lint": "eslint frontend server",
    "lint:fix": "eslint frontend server --fix",
    "format": "prettier frontend server",
    "format:fix": "prettier frontend server --write",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook",
    "generate": "plop",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "frontend/**/*.{js,ts,tsx}": [
      "bash -c tsc",
      "yarn eslint --fix",
      "yarn prettier --write",
      "yarn vitest related"
    ],
    "backend/**/*.js": [
      "yarn eslint --fix",
      "yarn prettier --write",
      "yarn vitest related"
    ]
  },
  "dependencies": {
    "@hapi/bourne": "^3.0.0",
    "@hapi/hapi": "^21.2.0",
    "@hapi/nes": "^13.0.0",
    "big.js": "^6.2.1",
    "bitcoin-address-generator": "^1.0.2",
    "bitcoin-address-validation": "^2.2.1",
    "blockchain.info": "^2.12.1",
    "http-status": "^1.6.2",
    "joi": "^17.7.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-feather": "^2.0.10",
    "react-router-dom": "6.6.1",
    "styled-components": "5.3.6",
    "styled-media-query": "2.1.2",
    "vite-plugin-svgr": "2.4.0",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "6.5.15",
    "@storybook/addon-essentials": "6.5.15",
    "@storybook/addon-interactions": "6.5.15",
    "@storybook/addon-links": "6.5.15",
    "@storybook/builder-vite": "0.2.6",
    "@storybook/react": "6.5.15",
    "@storybook/testing-library": "0.0.13",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.4.3",
    "@types/hapi__nes": "^11.0.6",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/styled-components": "5.1.26",
    "@types/testing-library__jest-dom": "5.14.5",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "@vitejs/plugin-react": "3.0.0",
    "@vitest/coverage-c8": "^0.28.1",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.11",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.2",
    "jsdom": "20.0.3",
    "lint-staged": "13.1.0",
    "nock": "^13.3.0",
    "nodemon": "^2.0.20",
    "plop": "3.1.1",
    "prettier": "2.8.1",
    "typescript": "4.9.4",
    "vite": "4.0.3",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "0.26.2"
  }
}
